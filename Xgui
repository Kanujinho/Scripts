local playerGui = Player:WaitForChild("PlayerGui")
local XGui = playerGui:FindFirstChild("XGui")
if not XGui then
    XGui = Instance.new("ScreenGui")
    XGui.Name = "XGui"
    XGui.ResetOnSpawn = false
    XGui.Parent = playerGui

    local FAT = Instance.new("Frame")
    FAT.Name = "FAT"
    FAT.Parent = XGui
    FAT.BackgroundTransparency = 1
    FAT.Position = UDim2.new(0, 0, 0, -36)
    FAT.Size = UDim2.new(1, 0, 1, 36)

    local ViewportFrame = Instance.new("ViewportFrame")
    ViewportFrame.Name = "viewport"
    ViewportFrame.BackgroundTransparency = 1
    ViewportFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ViewportFrame.CurrentCamera = workspace.CurrentCamera
    ViewportFrame.Size = UDim2.new(1,0,1,0)
    ViewportFrame.Parent = FAT
end
